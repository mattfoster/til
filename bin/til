#! /bin/bash
# Create TIL note

# These variables shouldn't change during execution
readonly TEMPLATE=templates/til.md
readonly TAG=$(basename $0)
readonly DIR=$TAG
readonly FILE=$(date '+%s')

# I'm hoping you can set this from outside the script
: ${TIL_DIR:=~/Dropbox/til}
readonly TIL_DIR

readonly TIL_PATH="${TIL_DIR}/${DIR}"
readonly ENTRY="${TIL_PATH}/${FILE}.md"

function replace_title {
  local filename=$1
  shift

  local tag=$1
  shift

  readonly tempfile=$(mktemp)
  echo "2s/.*/title: $*/" > $tempfile
  echo "3s/.*/categories: $tag/" >> $tempfile

  sed -i "" -f $tempfile $filename
}

function make_path {
  local path=$1
  shift

  if [[ ! -d "${path}" ]]; then
    mkdir -p $path
  fi
}

function create_entry_from_template {
  local filename=$1
  shift

  local template=$1
  shift

  if [[ -f "${template}" ]]; then
    cp $template $filename
  else 
    touch $filename
  fi
}

make_path $TIL_PATH
create_entry_from_template $ENTRY $TEMPLATE

readonly title=$*
# If there's a title on the command line
if [[ ! -z "${title}" ]]; then
  replace_title $ENTRY $TAG $title
fi

if [[ $EDITOR == "vim" ]]; then
  readonly command="-c startinsert!"
  readonly suffix=" +"
fi
exec $EDITOR $command $suffix $ENTRY
